@model MovieReviewSite.Core.Models.Movie.ViewModels.UpdateMovieViewModel

@{
    ViewBag.Title = @Model.Movie!.MovieName!;
    Layout = "_Layout";
}

<h1>Edit @ViewData["Title"]</h1>

@using (Html.BeginForm("UpdateMovie", "Movie", FormMethod.Post, new {id = "submitForm"}))
{
    @Html.LabelFor(m => m.DTO.Name)
    <input id="Name" value="@Model.Movie.MovieName" asp-for="DTO.Name" type="text" class="form-control"/>
    <br>

    @Html.LabelFor(m => m.DTO.Synopsis)
    <input id="Synopsis" value="@Model.Movie.Synopsis" asp-for="DTO.Synopsis" type="text" class="form-control"/>
    <br>

    @Html.LabelFor(m => m.DTO.Duration)
    <input id="Duration" value="@Model.Movie.Duration" asp-for="DTO.Duration" type="text" class="form-control"/>
    <br>

    @Html.LabelFor(m => m.DTO.ReleaseDate)
    <input id="ReleaseDate" value="@Html.DisplayFor(m => Model.Movie.ReleaseDate)" asp-for="DTO.ReleaseDate" type="text" class="form-control"/>
    <br>
    
    <label for="AgeRate">AgeRate</label>
    <select class="form-select" name="AgeRate" id="AgeRate">
        <option value="0"></option>
        <option value="1">G</option>
        <option value="2">PG</option>
        <option value="3">PG-13</option>
        <option value="4">R</option>
        <option value="5">NC-17</option>

    </select>
    <br>
    
    <button type="submit" class="btn btn-primary" style="background-color: #1e7316">Apply Changes</button>
}

@section Scripts{

    <script src="~/js/Movie/UpdateMovie.js"></script>
}
