@model MovieReviewSite.Core.Models.User.Request.LoginUserRequest

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Login</h2>

@using (Html.BeginForm("LoginUser", "User", FormMethod.Post, new {id = "submitForm"}))
{
    @Html.LabelFor(u => u.Username)
    <input asp-for="Username" type="text" class="form-control"/>
    <br>

    @Html.LabelFor(u => u.Password)
    <input asp-for="Password" type="text" class="form-control"/>
    <br>
    
    <button type="submit" class="btn btn-primary" style="background-color: #1e7316">Login</button>  
}
